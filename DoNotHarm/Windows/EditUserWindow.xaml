<Window x:Class="DoNotHarm.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoNotHarm.Windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="EditUserWindow" Height="350" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Имя"/>
            <TextBox x:Name="FirstNameTextBox"/>
            <Label Content="Фамилия"/>
            <TextBox x:Name="LastNameTextBox"/>
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox"/>
            <Label Content="Пароль"/>
            <TextBox x:Name="PasswordPasswordBox"/>
            <Label Content="Ip"/>
            <TextBox x:Name="IPTextBox"/>
            <Label Content="Тип1"/>
            <ComboBox x:Name="TypeUserComboBox" DisplayMemberPath="Name"/>

            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
